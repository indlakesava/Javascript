    <button type="button" id="Blue" onClick="changeColor(this)">Blue</button>
    <button type="button" id="Grey" onClick="changeColor(this)">Grey</button>
    <button type="button" id="Red" onClick="changeColor(this)">Red</button>
    <button type="button" id="Green" onClick="changeColor(this)">Green</button>
    <button type="button" id="Yellow" onClick="changeColor(this)">Yellow</button>
    <button type="button" id="Black" onClick="changeColor(this)">Black</button>
    <button type="button" id="Pink" onClick="changeColor(this)">Pink</button>  

    <script>
      function changeColor(objectpassed){
          document.bgColor = objectpassed.id;
      }
    </script>
